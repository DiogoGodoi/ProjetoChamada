<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthTeste</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style/_layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

</head>
    <body>

        <!--Header-->
        <header data-aos="fade" class="col-12">
            <nav class="navbar navbar-dark navbar-expand-lg">
                <div class="container-fluid p-0">
                    <button class="navbar-toggler mb-1" style="margin-left: 10px" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="usuarioSessaoSm" style="color: white">
                        @await Component.InvokeAsync("UsuarioSessao")
                    </div>
                    <div class="corDeFundoNav collapse navbar-collapse"  id="navbarNav">
                        <div class="col-lg-6 col-12 d-flex justify-content-start align-items-center">
                            <a asp-controller="Home" asp-action="Menu">
                                <img src="~/css/images/logo.png" class="img-fluid" />
                            </a>
                            <ul class="navbar-nav mx-3">
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Menu" class="nav-link" style="color: white;">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Menu" class="nav-link" style="color: white;">Alunos</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Menu" class="nav-link" style="color: white;">Professores</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Escola" asp-action="ListEscolas" class="nav-link" style="color: white;">Escolas</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Menu" class="nav-link" style="color: white;">Turmas</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Menu" class="nav-link" style="color: white;">Horarios</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Menu" class="nav-link" style="color: white;">Chamada</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6 col-12 d-flex flex-row 
                                    justify-content-lg-end align-items-lg-center
                                    justify-content-start align-items-center p-2">
                            <div class="usuarioSessaoLg" style="color: white">
                                @await Component.InvokeAsync("UsuarioSessao")
                            </div>
                            <form asp-controller="Auth" asp-action="Logout" method="post" role="form">
                                <button type="submit" class="btn btn-outline-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z"></path>
                                        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"></path>
                                    </svg>
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <!--Main-->
        <div data-aos="fade" data-aos-delay="500" class="container-fluid col-12 d-flex flex-column justify-content-center align-items-center">
                @RenderBody()
        </div>

        <!--Footer-->
        <footer data-aos="fade" class="rodape col-12 d-flex flex-column justify-content-end align-items-end">
            <div class="container-fluid d-flex flex-column justify-content-center">
                <h5>&copy; 2023 - AuthTeste</h5>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/popperjs/core/dist/umd/popper.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script>
            AOS.init();
        </script>
        @await RenderSectionAsync("Scripts", required: false)

    </body>
</html>
