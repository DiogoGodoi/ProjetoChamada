<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthTeste</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style/_layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthTeste.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

</head>
<body>

    <header data-aos="fade">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse secaoNav" id="navbarNav">
                    <img src="~/css/images/logo.png" class="img-fluid"/>
                    <div class="navList">
                        <ul class="navbar-nav mx-3">
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="color: white;">Home</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="color: white;">Alunos</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="color: white;">Professores</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="color: white;">Escolas</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="color: white;">Turmas</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="color: white;">Horarios</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="color: white;">Chamada</a>
                            </li>
                        </ul>
                    </div>
                    <div class="logout">
                        <form asp-controller="Auth" asp-action="Logout" method="post" role="form">
                            <button type="submit" class="btn btn btn-outline-primary nav-link" style="color: white">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div data-aos="fade" data-aos-delay="500" class="content">
            @RenderBody()
    </div>

    <footer data-aos="fade" class="rodape">
        <div class="container-fluid">
            <h5>&copy; 2023 - AuthTeste</h5>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
