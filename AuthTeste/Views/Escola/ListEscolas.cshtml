@model IEnumerable<MdlEscola>;

<link rel="stylesheet" href="~/css/style/ListEscolas.css" />


<div class="contentListEscola col-12 d-flex flex-column justify-content-center align-items-center">
    @if (Model == null)
    {
            <h1>Sem dados a exibir</h1>
    
    }
    else
    {
        <div class="table-responsive col-11">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"><h3>Nome</h3></th>
                        <th scope="col" class="text-center"><h3>Logradouro</h3></th>
                        <th scope="col" class="text-center"><h3>Numero</h3></th>
                        <th scope="col" class="text-center"><h3>Bairro</h3></th>
                        <th scope="col" class="text-center"><h3>Cidade</h3></th>
                        <th scope="col" class="text-center"><h3>Estado</h3></th>
                        <th scope="col" class="text-center"><h3>Ação</h3></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><h4>@item.Nome</h4></td>
                            <td><h4 class="text-center">@item.Logradouro</h4></td>
                            <td><h4 class="text-center">@item.Numero</h4></td>
                            <td><h4 class="text-center">@item.Bairro</h4></td>
                            <td><h4 class="text-center">@item.Cidade</h4></td>
                            <td><h4 class="text-center">@item.Estado</h4></td>
                            <td class="d-flex justify-content-center">
                                <a  class="btn btn-info
                                    col-lx-8 col-lg-8 col-md-12 col-sm-12 col-xs-12 text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
                                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"></path>
                                    </svg>
                                    Detalhes
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
}
</div>