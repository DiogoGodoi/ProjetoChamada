@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>


<link rel="stylesheet" href="~/css/style/ListAccount.css" />
 
<div class="contentTable col-10 d-flex flex-column p-5 shadow">
    <div data-aos="fade" class="jumbotron col-12 mb-3">
        <span><img src="~/css/images/userIcon.png" class="img-fluid iconMenu" /></span>
        <h1>USUARIOS</h1>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"><h3>Usuario</h3></th>
                    <th scope="col"><h3>E-mail</h3></th>
                    <th scope="col" class="text-center"><h3>Ação</h3></th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        <td><h4>@item.UserName</h4></td>
                        <td><h4>@item.Email</h4></td>
                        <td class="d-flex flex-row justify-content-evenly">
                            <button type="button" class="btn btn-danger col-5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z"></path>
                                </svg>
                                Deletar
                            </button>
                            <a asp-controller="Account" asp-action="GetAccountId" asp-route-id="@item.Id" class="btn btn-info col-5 text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"></path>
                                </svg>
                                Detalhes
                            </a>
                        </td>
                        </tr> 
                    }
            </tbody>
        </table>
    </div>
    <div class="jumbotron">
        <a asp-controller="Account" asp-action="CreateAccount" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"></path>
            </svg>
            Novo usuário
        </a>
    </div>
</div>