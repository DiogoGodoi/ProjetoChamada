@model MdlUser;

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Login </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthTeste.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>
<body>

	<div class="content" data-aos="fade" data-aos-duration="800">
		<div class="loginArea shadow">
			<div class="formArea">
				<form class="formInputs" asp-controller="Auth" asp-action="Login" method="post" role="form">
					<span class="mt-3">
						<h1>ENTRAR</h1>
						</span>
						<div class="form-group col-lg-10 col-md-10 col-sm-10">
						<label asp-for="email" class="control-label"></label>
						<input asp-for="email" class="form-control" placeholder="Digite o nome de usuário" />
						<span asp-validation-for="email" class="text-danger"
							  data-aos-duration="500"></span>
						</div>
					<div class="form-group col-lg-10 col-md-10 col-sm-10">
						<label asp-for="password" class="control-label"></label>
							<input asp-for="password" class="form-control" placeholder="Digite a senha"/>
						<span asp-validation-for="password" class="text-danger" 
						data-aos="fade" data-aos-duration="500"></span>
						</div>

						@if (!ViewData.ModelState.IsValid)
						{
								
						<div class="alert alert-danger mt-4 mb-2">
							<div asp-validation-summary="ModelOnly"></div>
						</div>
						}

						<div class="botaoArea mt-2 mb-3">
							<span><a asp-area="" asp-controller="Account" asp-action="ForgotPassword">Esqueci minha senha</a></span>
							<button type="submit" class="btn botaoLogin mt-3">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-box-arrow-in-left" viewBox="0 0 16 16">
									<path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0z"></path>
									<path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"></path>
								</svg>
								Button
							</button>
						</div>
				</form>
			</div>
			<div class="LoginImg">
				<img src="~/css/images/logo.png" class="img-fluid" />
			</div>
		</div>
	</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
	<script>
		AOS.init();
	</script>

</body>
</html>







