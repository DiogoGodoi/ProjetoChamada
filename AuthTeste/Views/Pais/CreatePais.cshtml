@model MdlPais;

@{
	ViewData["Title"] = "Cadastrar";
}

<link rel="stylesheet" href="~/css/style/CreatePais.css" />

<div class="accountContainer col-lg-5 col-10 d-flex flex-column justify-content-center align-items-center shadow">
	<form class="formInputs col-12 d-flex flex-column justify-content-center align-items-center"
		  asp-controller="Pais" asp-action="CreatePais" method="post" role="form">
		<div data-aos="fade" class="jumbotron col-12 d-flex flex-column justify-content-center align-items-center">
			<span><img src="~/css/images/userIcon.png" class="img-fluid iconMenu" /></span>
			<h1>ESCOLAS</h1>
		</div>
		<div class="row">
			<div class="form-group col-6">
				<label asp-for="@Model.Nome" class="control-label"></label>
				<input asp-for="@Model.Nome" class="form-control" placeholder="Informe o nome" />
				<span asp-validation-for="@Model.Nome" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
			<div class="form-group col-6">
				<label asp-for="@Model.Sobrenome" class="control-label"></label>
				<input asp-for="@Model.Sobrenome" class="form-control" placeholder="Informe o sobrenome" />
				<span asp-validation-for="@Model.Sobrenome" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
			<div class="form-group col-3">
				<label asp-for="@Model.Sexo" class="control-label"></label>
				<select asp-for="@Model.Sexo" asp-items="ViewBag.Sexo" class="form-select"></select>
				<span asp-validation-for="@Model.Sexo" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
			<div class="form-group col-4">
				<label asp-for="@Model.Cpf" class="control-label"></label>
				<input asp-for="@Model.Cpf" class="form-control" value="0" placeholder="___.___.___-__" />
				<span asp-validation-for="@Model.Cpf" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-5">
				<label asp-for="@Model.Contato" class="control-label"></label>
				<input asp-for="@Model.Contato" class="form-control" placeholder="( ) _____-____" />
				<span asp-validation-for="@Model.Contato" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-5">
				<label asp-for="@Model.Logradouro" class="control-label"></label>
				<input asp-for="@Model.Logradouro" class="form-control" placeholder="Informe o logradouro" />
				<span asp-validation-for="@Model.Logradouro" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-2">
				<label asp-for="@Model.Numero" class="control-label"></label>
				<input asp-for="@Model.Numero" class="form-control" placeholder="Nº" />
				<span asp-validation-for="@Model.Numero" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-5">
				<label asp-for="@Model.Bairro" class="control-label"></label>
				<input asp-for="@Model.Bairro" class="form-control" placeholder="Informe o bairro" />
				<span asp-validation-for="@Model.Bairro" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-8">
				<label asp-for="@Model.Cidade" class="control-label"></label>
				<input asp-for="@Model.Cidade" class="form-control" placeholder="Informe a cidade" />
				<span asp-validation-for="@Model.Cidade" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-4">
				<label asp-for="@Model.Estado" class="control-label"></label>
				<select asp-for="@Model.Estado" asp-items="ViewBag.Estado" class="form-select"></select>
				<span asp-validation-for="@Model.Estado" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
		</div>
		<div class="botaoArea col-12 d-flex flex-row justify-content-evenly align-items-center mt-2 mb-3">
			<button type="submit" class="btn botaoCriar col-lg-3 col-5 mt-3">
				Cadastrar
			</button>
			<a asp-controller="Home" asp-action="Menu" class="btn botaoVoltar col-lg-3 col-5 mt-3">
				Voltar
			</a>
		</div>
	</form>
</div>