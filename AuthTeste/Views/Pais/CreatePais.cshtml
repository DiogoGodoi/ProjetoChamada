@model MdlPais;

@{
	ViewData["Title"] = "Cadastrar";
}

<link rel="stylesheet" href="~/css/style/CreatePais.css" />

<div class="accountContainer col-lg-5 col-10 d-flex flex-column justify-content-center align-items-center shadow">
	<form class="formInputs col-12 d-flex flex-column justify-content-center align-items-center"
		  asp-controller="Escola" asp-action="CreateEscola" method="post" role="form">
		<div data-aos="fade" class="jumbotron col-12 d-flex flex-column justify-content-center align-items-center">
			<span><img src="~/css/images/userIcon.png" class="img-fluid iconMenu" /></span>
			<h1>ESCOLAS</h1>
		</div>
		<div class="row">
			<div class="form-group col-6">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" placeholder="Digite o nome da escola" />
				<span asp-validation-for="Nome" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
			<div class="form-group col-6">
				<label asp-for="Sobrenome" class="control-label"></label>
				<input asp-for="Sobrenome" class="form-control" placeholder="Digite o nome da escola" />
				<span asp-validation-for="Sobrenome" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
			<div class="form-group col-3">
				<label asp-for="Sexo" class="control-label"></label>
				<select asp-for="Sexo" asp-items="ViewBag.Sexo"></select>
				<span asp-validation-for="Sexo" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
			<div class="form-group col-4">
				<label asp-for="Cpf" class="control-label"></label>
				<input asp-for="Cpf" class="form-control" value="0" placeholder="Digite o número" />
				<span asp-validation-for="Cpf" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-5">
				<label asp-for="Contato" class="control-label"></label>
				<input asp-for="Contato" class="form-control" placeholder="Informe o nome do bairro" />
				<span asp-validation-for="Contato" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-5">
				<label asp-for="Logradouro" class="control-label"></label>
				<input asp-for="Logradouro" class="form-control" placeholder="Informe o nome do bairro" />
				<span asp-validation-for="Logradouro" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-3">
				<label asp-for="Numero" class="control-label"></label>
				<input asp-for="Numero" class="form-control" placeholder="Informe o nome do bairro" />
				<span asp-validation-for="Numero" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-4">
				<label asp-for="Bairro" class="control-label"></label>
				<input asp-for="Bairro" class="form-control" placeholder="Informe o nome do bairro" />
				<span asp-validation-for="Bairro" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-4">
				<label asp-for="Bairro" class="control-label"></label>
				<input asp-for="Bairro" class="form-control" placeholder="Informe o nome do bairro" />
				<span asp-validation-for="Bairro" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-8">
				<label asp-for="Cidade" class="control-label"></label>
				<input asp-for="Cidade" class="form-control" placeholder="Informe o nome do bairro" />
				<span asp-validation-for="Cidade" class="text-danger"
					  data-aos="fade" data-aos-duration="500"></span>
			</div>
			<div class="form-group col-3">
				<label asp-for="Estado" class="control-label"></label>
				<select asp-for="Estado" asp-items="ViewBag.Estado"></select>
				<span asp-validation-for="Estado" class="text-danger"
					  data-aos-duration="500"></span>
			</div>
		</div>
		@if (ViewBag.Mensagem != null)
		{
			<h5 class="mt-2">@ViewBag.Mensagem</h5>
		}
		<div class="botaoArea col-12 d-flex flex-row justify-content-evenly align-items-center mt-2 mb-3">
			<button type="submit" class="btn botaoCriar col-lg-3 col-5 mt-3">
				Cadastrar
			</button>
			<a asp-controller="Escola" asp-action="ListEscolas" class="btn botaoVoltar col-lg-3 col-5 mt-3">
				Voltar
			</a>
		</div>
	</form>
</div>